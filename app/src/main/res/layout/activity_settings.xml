<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.congda.baselibrary.widget.IMCommonTitleView
        android:id="@+id/common_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_f5f5f5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="37.5dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:background="@color/colorPrimary"
            android:text="应用的新消息设置"
            android:textColor="@color/color_cccccc"
            android:textSize="14sp" />

         <com.congda.baselibrary.widget.IMComLinearView
            android:id="@+id/sov1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:is_Check="true"
            app:left_img="@mipmap/icon_set_msg"
            app:text_content="新消息通知" />

         <com.congda.baselibrary.widget.IMComLinearView
            android:id="@+id/sov2"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:is_Check="true"
            app:left_img="@mipmap/icon_set_voice"
            app:text_content="声音提醒" />

         <com.congda.baselibrary.widget.IMComLinearView
            android:id="@+id/sov3"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:is_Check="false"
            app:left_img="@mipmap/icon_set_ver"
             app:is_show_line="false"
            app:text_content="震动提醒" />

         <com.congda.baselibrary.widget.IMComLinearView
            android:id="@+id/sov4"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:is_Check="false"
            app:left_img="@mipmap/icon_set_data"
            android:layout_marginTop="12dp"
            app:text_content="数据缓存"
            app:is_show_right_arr="true"/>
         <com.congda.baselibrary.widget.IMComLinearView
            android:id="@+id/sov5"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:is_Check="false"
            app:is_show_line="false"
            app:left_img="@mipmap/icon_set_about"
            app:text_content="关于我们"
            app:is_show_right_arr="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/btn_exit"
            android:layout_marginTop="101dp"
            android:text="退出登录"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/shape_btn_red_c28"/>

    </LinearLayout>

</LinearLayout>