<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.congda.baselibrary.widget.IMCommonTitleView
            android:id="@+id/commonTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="加载中"
                android:layout_marginTop="10dp"
                android:id="@+id/btn1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="底部sheet"
                android:textAllCaps="false"
                android:id="@+id/btn2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="底部弹出"
                android:id="@+id/btn3"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="dialog弹窗"
                android:textAllCaps="false"
                android:id="@+id/btn4"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="图片浏览"
                android:id="@+id/btn5"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="加载H5"
                android:id="@+id/btn6"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="保存图片"
                android:id="@+id/btn7"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="时间联动"
                android:id="@+id/btn8"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="内容联动"
                android:id="@+id/btn9"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="城市联动"
                android:id="@+id/btn10"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="列表demo"
                android:textAllCaps="false"
                android:id="@+id/btn11"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="bindService"
                android:textAllCaps="false"
                android:id="@+id/btn12"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="dialogFragment"
                android:textAllCaps="false"
                android:id="@+id/btn13"/>
            <ImageView
                android:id="@+id/iv1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@mipmap/app_logo"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>