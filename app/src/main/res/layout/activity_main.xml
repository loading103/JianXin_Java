<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/tabs"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/color_f5f5f5"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <CheckedTextView
                android:id="@+id/ctv_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="聊天"
                android:checked="true"
                android:drawableTop="@drawable/selector_main_first"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:textColor="@color/primarybar_txt"
                android:gravity="center"
                android:textSize="11sp"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <CheckedTextView
                android:id="@+id/ctv_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:layout_gravity="center"
                android:drawableTop="@drawable/selector_main_second"
                android:drawablePadding="4dp"
                android:textColor="@color/primarybar_txt"
                android:gravity="center"
                android:textSize="11sp"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <CheckedTextView
                android:id="@+id/ctv_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现"
                android:gravity="center"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="11sp"
                android:drawableTop="@drawable/selector_main_third"
                android:drawablePadding="4dp"
                android:textColor="@color/primarybar_txt"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp">
            <CheckedTextView
                android:id="@+id/ctv_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/primarybar_txt"
                android:text="我的"
                android:drawableTop="@drawable/selector_main_fouth"
                android:drawablePadding="4dp"
                android:textAlignment="center"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>
    </LinearLayout>
    <com.congda.baselibrary.widget.IMViewPagerSlide
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tabs" />
</RelativeLayout>