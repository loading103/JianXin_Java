<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_top">
    <View
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="gone"
        android:background="@color/color_top_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/topview"
        android:background="@color/color_f5f5f5">
        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_2B2B2B"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="17dp" />
        <RelativeLayout
            android:id="@+id/re_top_finish"
            android:layout_width="100dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_top_finish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/im_iv_back" />
            <TextView
                android:id="@+id/tv_top_finish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="保存"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="8dp"
                android:paddingRight="20dp"
                android:paddingTop="8dp"
                android:visibility="gone"
                android:paddingBottom="8dp"
                android:drawablePadding="10dp"
                android:textSize="15dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/re_top_right"
            android:layout_width="100dp"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_top_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="保存"
                android:textColor="@color/colorPrimary"
                android:paddingTop="8dp"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:paddingBottom="8dp"
                android:drawablePadding="10dp"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/iv_top_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>